}

<h4>Tutor Sessions</h4>

@*<script src="~/Content/Rating/jquery.js"></script>*@
<script src="~/Content/Rating/rating_simple.js"></script>
<link href="~/Content/Rating/rating_simple.css" rel="stylesheet" />

