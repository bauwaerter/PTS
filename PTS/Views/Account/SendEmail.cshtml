@using Core.Domains
@using PTS.Helpers
@model PTS.Models.EmailModel

@{
    ViewBag.Title = "Send Message";
}

<hgroup class="demo-panel-title">
    <h2>@ViewBag.Title</h2>
    <h4 style="margin-left: 50px;">Get connected!</h4>
</hgroup>
<br/>
@using (Html.BeginForm(null, null, FormMethod.Post, new { @id="reviewForm"}))
{

    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.From)
    @Html.HiddenFor(model => model.To)

<div class="sectionContainer formHolder">
    <div class="container" style="margin-top: 80px; margin-left: 40px;">
        <div style="background-color: #ecf0f1; border-radius: 10px; padding-top: 2px; padding-left: 10px; padding-bottom: 10px;width: 925px;">
        <div class="row">
            <div class="col-md-3" style="display: inline;">
                <p>@Html.LabelFor(model => model.To)</p>
                @Html.DisplayFor(model => model.To, new { @class = "form-control", style = "width:250px;" })
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-3" style="display: inline;">
                <p>@Html.LabelFor(model => model.Subject, "Subject")</p>
                @Html.TextBoxFor(model => model.Subject, new { @class = "form-control", style = "width:900px" })
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-3" style="display: inline;">
                @Html.TextAreaFor(model => model.Body, new { @class = "form-control", style = "width:900px; height:300px;" })
            </div>
        </div>
        <br />
        <br />
        <button id="formSubmit" type="submit" class="btn btn-primary">Send</button>
    </div>
        </div>
        </div>
}

<script src="~/Content/Flat-UI/js/flatui-checkbox.js"></script>
<script src="~/Content/Flat-UI/js/bootstrap-select.js"></script>
<script src="~/Content/Flat-UI/js/bootstrap-switch.js"></script>
<script src="~/Content/Flat-UI/js/bootstrap.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("select[name='rating']").selectpicker({ style: 'btn-primary', menuStyle: 'dropdown-inverse' });
        $("#Rating").hide();
    });

    $("#select").on('change', function () {
        console.log($(this).val());
        $("#Rating").val($(this).val());
    }).change();

</script>