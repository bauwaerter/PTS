@using PTS.Helpers
@model PTS.Models.TeacherScheduleModel

@{
    Layout = null;
}

<form id="teacherUserForm" method="post">
    @Html.HiddenFor(model => model.Teacher.Id)
    
    <p>@Html.Label("Subject")</p>
    @Html.DropDownList("subject", new SelectList(ListHelper.GetListOfSubjects(), "Id", "Name"), new {@id = "subject", @name = "subject", @class="select-block", @style="display: none;"})
    

    <p>@Html.LabelFor(model => model.Teacher.HourlyRate, "Hourly Rate")</p>
    @Html.TextBoxFor(model => model.Teacher.HourlyRate, new {@class = "form-control", style="width:400px"})

    <br />

    <p>@Html.LabelFor(model => model.Teacher.ClassRate, "Class Rate")</p>
