<script src="~/Content/Flat-UI/js/jquery.stacktable.js"></script>
<script src="~/Content/jquery-timepicker-master/jquery.timepicker.js"></script>
<script src="~/Content/jquery-timepicker-master/jquery.timepicker.min.js"></script>
<link rel="stylesheet" media="screen" href="~/Content/jquery-timepicker-master/jquery.timepicker.css" type="text/css" />
<script type="text/javascript">
    $(document).ready(function() {
        $("select[name='subject']").selectpicker({ style: 'btn-primary', menuStyle: 'dropdown-inverse' });
        $(".ui-timepicker-input").timepicker({ 'timeFormat': 'H:i:s' });
        $(".date").datepicker();
    });

    $(".todo li").click(function () {
        if (!$(".ui-timepicker-input").is(':focus') && !$(".date").is(':focus')) {
            $(this).toggleClass("todo-done");
            $(this).find('.todo-content div').toggleClass("show");
            if ($(this).is('.todo-done')) {
                $(this).find('.weekday').val(true);
            } else {
                $(this).find('.weekday').val(false);
            }
        }
    });
</script>
