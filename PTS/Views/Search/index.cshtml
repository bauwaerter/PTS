
@{
    ViewBag.Title = "Index";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="form-group">
        <div class="col-md-4">
            <input id="globalSearch" class="form-control" style="font-size: 20px;"/>
        </div>
        <div class="col-md-2">
            <button id="globalSearchButton" class="btn btn-info" float: right>Search</button>
        </div>
    </div>
</div>

<div id="teacherUserTable"></div>
<link href="~/Scripts/jtable/themes/metro/blue/jtable.css" rel="stylesheet" />
<script>
    $(document).ready(function () {
        $('#teacherUserTable').jtable({
            title: 'Teachers',
            
            actions: {
                listAction: '@Url.Action("GetTeacherUsers")',
                createAction: '@Url.Action("CreateTeacherUser")',
            },
            fields: {
                Id: {
                    key: true,
                },
                ClassRate: {
                    title: 'Class Rate'
                },
                HourlyRate: {
                    title: 'Hourly Rate'
                }
            }
        });

        $('#teacherUserTable').jtable('load');

    });
</script>