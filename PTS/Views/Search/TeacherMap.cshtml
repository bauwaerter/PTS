@model Core.Domains.Location



<h2 style="margin-left:20px;">Map</h2>
<br />
<div id="googleMap" style="width: 700px; height: 450px; margin-left: 50px; border-radius:10px;"></div>

<script>
    var mapsCenter = new google.maps.LatLng('@(Model.Latitude)', '@(Model.Longitude)');
    $(document).ready(function () {
        google.maps.event.addDomListener(window, 'load', initialize);
    });
    function initialize() {
        var mapProp = {
            center: mapsCenter,
            zoom: 8,
            mapTypeId: google.maps.MapTypeId.ROADMAP
        };
        var map = new google.maps.Map(document.getElementById("googleMap"), mapProp);

        var marker = new google.maps.Marker({
            position: mapsCenter,
            map: map,
            title: 'Hello World!'
        });

        marker.setMap(map);
    }

</script>



